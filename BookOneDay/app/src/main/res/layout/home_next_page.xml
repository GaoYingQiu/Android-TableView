<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap.Vertical"
    android:background="@color/lj_color_white">

    <TextView
        android:id="@+id/menu_item_sectionHeader"
        style="@style/MatchWrap"
        android:background="#EEEEEE"
        android:layout_height="15dp"
        android:textColor="#3c3c3c"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/before_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/lj_color_gray1"
            android:background="@android:color/transparent"
            android:text="前一天"/>

        <ImageView
            android:layout_width="1.5dp"
            android:layout_height="wrap_content"
            android:src="@drawable/vline"/>

        <Button
            android:id="@+id/next_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/lj_color_gray1"
            android:background="@android:color/transparent"
            android:text="后一天"/>
    </LinearLayout>

    <TextView
        android:id="@+id/menu_item_sectionFooter"
        style="@style/MatchWrap"
        android:background="#EEEEEE"
        android:layout_height="15dp"
        android:textColor="#3c3c3c"
        />
</LinearLayout>