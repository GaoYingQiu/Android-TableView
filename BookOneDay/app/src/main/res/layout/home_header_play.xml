<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap.Vertical"
    android:background="@color/lj_color_white"
    >

    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:padding="15dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="28dp"
                android:layout_height="22dp"
                android:src="@drawable/home_audio_music"
                />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="今天值得花时间 | 听"
                android:textColor="@color/lj_color_black"
                android:textSize="18sp" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="right">
                <ImageView
                    android:id="@+id/home_audio_play"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/home_audio_play"
                    />
           </LinearLayout>
    </LinearLayout>
    <!-- cell bottom line -->

    <TextView
        android:id="@+id/cell_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.48dp"
        android:background="@color/lj_color_line"
        />
</LinearLayout>